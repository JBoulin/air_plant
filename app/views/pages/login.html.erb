<div class="container mb-3 mt-3 p-3 bg-light rounded">
  <%= simple_form_for :user, url: '/users/sign_in' do |f| %>
    <div class="row">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title text-center">Me connecter</h4>
            <div class="mt-4 text-center p-3 m-3 space-between">
              <%= f.button :submit, "Facebook", class: "btn btn-primary btn-block m-3",  data: { provider: 'facebook' } %>
              <%= f.button :submit, "Google", class: "btn btn-primary btn-block m-3", data: { provider: 'google_oauth2' } %>
            </div>
            <div class="mt-4 text-center">
              <p class="mb-0">
                <span class="text-muted">ou</span>
              </p>
            </div>
            <div class="mt-2">
              <%= f.input :username, label: "Nom d'utilisateur ", class: 'form-control' , placeholder: 'votre pseudo ici' %>
              <%= f.input :email, label: "Adresse email", class: 'form-control' , placeholder: 'votre email ici' %>
              <%= f.input :password, label: "Mot de passe", class: 'form-control', placeholder: '*********' %>
            </div>
            <div class="d-flex justify-content-between align-items-center mt-4">
              <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean, input_html: { class: 'form-check-input' } %>
              <%= link_to "Mot de passe oubliÃ©?", new_user_password_path, class: 'text-muted' %>
            </div>
            <div class="mt-4 text-center rounded">
              <%= f.button :submit, "Me connecter", class: "btn btn-primary btn-large" %>
            </div>
            <div class="mt-4 text-center">
              <%= link_to "Pas encore de compte?", new_user_registration_path, class: 'text-muted' %>
            </div>
          </div>
        </div>
    </div>
  <% end %>
</div>
