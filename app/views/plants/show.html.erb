<div class="mb-5 w-75 mx-auto">

    <img class="rounded mt-3 mb-3 img-fluid mx-auto d-block" src="https://images.ctfassets.net/b85ozb2q358o/3YnA2pLFdMDnr3rx4KdCtQ/a1bf618906fba92504876d609cd043ab/comment-entretenir-les-cactus-et-plantes-grasses-5.jpg" alt="">


    <div class="">
      <div class="row ">
        <div class="col-8">
          <div class="card card-body mb-3">
            <h2><%= Plant.first.name %></h2>
            <p><small><%= Plant.first.description %></small></p>
            <p><small>En location par :</small></p>
          </div>
        </div>

        <div class="col-4">
          <div class="card p-3">

            <div class="py-3 row">
              <%= simple_form_for([@plant, @booking]) do |f| %>
              <%= f.input :start_date, label:"Début",
              as: :string,
              input_html: { data: { controller: "datepicker" } }, id: 'booking_form' %>
              <%= f.input :end_date, label:"Fin",
              as: :string,
              input_html: { data: { controller: "datepicker" } }, id: 'booking_form' %>
              <% end %>
            </div>
            <div class="justify-content-between d-flex justify-content-between py-3">
              <p><strong>Cactus</strong> (1)</p>
              <p>20 €</p>
            </div>

            <div class="justify-content-between d-flex justify-content-between pb-3">
              <p><strong>Frais de réservation</strong></p>
              <p>2 €</p>
            </div>

            <div class="justify-content-between d-flex justify-content-between pb-3">
              <p><strong>Entretien</strong></p>
              <p>3 €</p>
            </div>

            <div class="justify-content-between d-flex justify-content-between pt-3 border-top">
              <p><strong>Total</strong></p>
              <p><strong>25 €</strong></p>
            </div>
            <%= link_to "Réserver", bookings_path, class:"btn btn-primary w-100" %>
          </div>
        </div>
      </div>
    </div>
</div>
