<div class="reservation-container">
            <div class="reservation-header">Mes plantes en location</div>
            <% @plants.each do | plant | %>
            <div class="reservation-card">
                <%= cl_image_tag plant.photo.key%>
                <div class="reservation-details">
                    <h3 class="reservation-title"><%= plant.name %></h3>
                    <p>Description: <%= plant.description %> </p>
                    <p>Prix : <%= plant.price %> â‚¬</p>
                    <%= link_to 'Modifier', edit_plant_path(plant), class: 'btn btn-success' %>
                    <%= link_to 'Supprimer', plant_path(plant), method: :delete, data: { confirm: 'Voulez-vous supprimer cette plante?' }, class: 'btn btn-danger' %>
                </div>
            </div>
            <% end %>
        </div>
